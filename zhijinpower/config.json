{
  "name": "ZhijinPower HA Bridge",
  "version": "1.0",
  "slug": "zhijinpower",
  "description": "Publishes solar data to Home Assistant via MQTT",
  "arch": ["amd64", "i386", "armv7", "aarch64"],
  "startup": "services",
  "boot": "auto",
  "ports": {},
  "host_network": true,
  "options": {
    "MQTT_HOST": "localhost",
    "MQTT_PORT": 1883,
    "MQTT_USER": "mqtt-user",
    "MQTT_PASS": "mqtt-pass",    
    "TOKEN": "abc-123",
    "MACHINE_ID": "<your device_ID>"
  },
  "schema": {
    "MQTT_HOST": "str",
    "MQTT_PORT": "int",
    "MQTT_USER": "str",
    "MQTT_PASS": "str",    
    "TOKEN": "str",
    "MACHINE_ID": "str"
  },
  "url": "https://github.com/robschw123/zhijinpower-ha-addon",
  "build_from": {
  "amd64": "python:3.12-slim",
  "arm64": "arm64v8/python:3.12-slim",
  "armv7": "arm32v7/python:3.12-slim",
  "i386": "i386/python:3.12-slim"  }
}

